<h1><%= @cocktail.name %></h1>

<div class='ingredients-box'>
  <h2>Ingredients</h2>
  <ul>
    <% @cocktail.doses.each do |dose|  %>
    <li class="no-bullets">
      <%= dose[:description] %> <%= dose.ingredient[:name] %> <%= link_to dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
    </li>

    <% end %>
  </ul>
</div>

<%= link_to "Add an Ingredient", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
<%= link_to "Back to list of cocktails", cocktails_path, class: 'btn btn-primary' %>
